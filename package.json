{
  "name": "n8n-nodes-syncmate",
  "version": "1.0.8",
  "description": "Send WhatsApp messages or media using SyncMate Assistro API.",
  "keywords": [
    "n8n-community-node-package",
    "whatsapp",
    "assistro",
    "syncmate",
    "automation"
  ],
  "license": "MIT",
  "homepage": "https://github.com/heratshah-collab/n8n-nodes-syncmate#readme",
  "author": {
    "name": "Assistro Technologies",
    "email": "support@assistro.co"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heratshah-collab/n8n-nodes-syncmate.git"
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "npx rimraf dist && tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/WhatsAuto/WhatsAuto.node.js"
    ],
    "credentials": [
      "dist/credentials/AssistroOAuth2Api.credentials.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.6.2",
    "@typescript-eslint/parser": "~8.32.0",
    "eslint": "^8.45.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^4.0.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "n8n-workflow": "^1.111.0"
  },
  "dependencies": {
    "n8n-core": "^1.113.1",
    "n8n-nodes-whatsapp": "^0.0.5"
  }
}
